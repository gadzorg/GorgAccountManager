%section.pam
  .mw500p.center
    .box.box-light.shadow-1.mtm
      .box-top.box-top-color.pam
        On va devoir faire ça à l'ancienne...
      .box-bottom
        .pam
          %p.mtm Laisse-nous quelques informations pour t'identifier et décris-nous ton problème.
          = form_tag(recovery_support_final_path(), :method => :post) do
            -#= label_tag :nom
            = text_field_tag :nom,"", :placeholder => "Nom", :size => 33, :autofocus => true
            -#= label_tag :prenom
            = text_field_tag :prenom,"", :placeholder => "Prénom", :size => 33
            -#= label_tag :email, "Email où nous pourrons te contacter"
            = text_field_tag :email,"", :placeholder => "Email où nous pouvons te contacter", :size => 33
            -#= label_tag :telephone
            = text_field_tag :telephone,"", :placeholder => "Téléphone", :size => 33
            -#= text_field_tag :ddn,"", :placeholder => "Date de naissance", :size => 30
            =label_tag "Date de naissance"
            = select_date( date = Date.current, options = {order: [:day, :month, :year],prefix: 'ddn', start_year: 115.years.ago.year, end_year: Date.today.year, default: Date.today}, html_options = {})
            = text_area_tag :issue,"", :placeholder => "Déscription du problème", :cols => 32
            %p.mtm= submit_tag 'Envoyer',:class => "bouton bouton_bleu"