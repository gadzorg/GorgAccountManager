%section.int.pam.center
  %h1 Utilisateurs

  Recherche par hruid
  =form_tag  users_path,:method => :get, id: "hruid_search_form" do
    =autocomplete_field_tag 'Hruid', @query, autocomplete_user_hruid_users_path, :size => 30, :id => 'hruid_query', :id_element => '#query', name:"query", :placeholder => "nom.prenom.annÃ©e"
    =hidden_field_tag "id"
    = submit_tag 'GO!', :class => ""

  :javascript
    $('#hruid_query').bind('railsAutocomplete.select', function(event, data){
    /* Do something here */
      $("#hruid_search_form")[0].submit()
    });

  %table
    %thead
      %tr
        / %th Email
        %th= User.human_attribute_name('fullname')
        %th= User.human_attribute_name('hruid')
        %th= User.human_attribute_name('uuid')
        %th


    %tbody
      - @users.each do |user|
        %tr
          / %td= user.email
          %td= user.fullname+(user.role ? " - #{user.role.name}" : "")
          %td= user.hruid
          %td= user.uuid
          %td
            = link_to t('users.forms.buttons.show'), user_path(user)
            -if can? :update, user
              = link_to t('users.forms.buttons.edit'), edit_user_path(user)

            / = link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = will_paginate @users
  = link_to t('users.forms.buttons.new'), new_user_path
