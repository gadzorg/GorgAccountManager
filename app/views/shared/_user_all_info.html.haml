
.grid-3-small-1
  .box.box-light.shadow-1.mtm
    .box-top.box-top-color.pam
      GrAM
    .box-bottom.pam
      %p=@user_from_gram.hruid
      %p=@user_from_gram.firstname if @user_from_gram.respond_to?(:firstname)
      %p=@user_from_gram.lastname if @user_from_gram.respond_to?(:lastname)
      %p=@user_from_gram.id_soce if @user_from_gram.respond_to?(:id_soce)
      %p=@user_from_gram.enable
      %p=@user_from_gram.id
      %p=@user_from_gram.uid_number
      %p=@user_from_gram.home_directory
      %h2 Alias
      -if @user_from_gram.respond_to?(:alias)
        %ul
        -@user_from_gram.alias.each do |a|
          %li=a
      %h2 Mail forwarding
      -if @user_from_gram.respond_to?(:mail_forwarding)
        %ul
        -@user_from_gram.mail_forwarding.each do |m|
          %li=m
      %h2 Mail alias
      -if @user_from_gram.respond_to?(:mail_alias)
        %ul
        -@user_from_gram.mail_alias.each do |m|
          %li=m

      %p
        %b Email
        =@user_from_gram.email if @user_from_gram.respond_to?(:email)
      %p
        %b email forge
        =@user_from_gram.email_forge
      %p=@user_from_gram.birthdate if @user_from_gram.respond_to?(:birthdate)
      %p=@user_from_gram.login_validation_check
      %p=@user_from_gram.description if @user_from_gram.respond_to?(:description)
      %h2 Entit√©
      %ul
      -@user_from_gram.entities.each do |e|
        %li=e
      %p=@user_from_gram.entite if @user_from_gram.respond_to?(:entite)
      

